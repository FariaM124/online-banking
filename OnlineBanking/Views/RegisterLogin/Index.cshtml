@model OnlineBanking.Models.UserTable

@{
    ViewBag.Title = "Index";
}

@Html.Raw(ViewBag.ErrorMessage)

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- jQuery UI CSS -->
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>

    <style>
        /* Custom Styles */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .form-container {
            width: 100%;
            max-width: 600px;
            padding: 40px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            font-size: 16px;
        }

        .btn-create, .btn-back {
            width: 100%;
            max-width: 120px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h2 class="text-center" style="font-family: 'DM Serif Display', serif; font-size: 28px; font-weight: 600; color: #333;">Login</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Role Dropdown -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-right" })
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                @Html.DropDownListFor(model => model.Role, new SelectList(new[] { "Admin", "Customer" }), "--Select Role--", new { @class = "form-control", id = "roleDropdown" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Email Field (Initially Disabled) -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-right" })
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address", id = "emailField", disabled = "disabled" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Password Field (Initially Disabled) -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-right" })
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", id = "passwordField", disabled = "disabled" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Form Buttons -->
                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-sign-in-alt"></i> Login</button>
                            <span style="margin: 0 10px;"></span> <!-- Adding space between buttons -->
                            @*<a href="@Url.Action("Register", "RegisterLogin")" class="btn btn-outline-secondary"><i class="fas fa-user-plus"></i> Register</a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Validation -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initially disable the email and password fields
            $("#roleDropdown").change(function () {
                var role = $(this).val();
                if (role && role != "--Select Role--") {
                    $("#emailField, #passwordField").prop("disabled", false); // Enable email and password
                } else {
                    $("#emailField, #passwordField").prop("disabled", true); // Disable email and password
                }
            });

            // Trigger the change event on page load to check the initial state of the role dropdown
            $("#roleDropdown").trigger("change");
        });
    </script>

</body>
</html>
