@model OnlineBanking.Models.StatementTable
@{
    ViewBag.Title = "Index";
}

@Html.Raw(ViewBag.ErrorMessage)

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin/admin_dashboard/dist/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous" />
</head>
<body class="sb-nav-fixed">
    <form id="form1" action="@Url.Action("Index", "TransferMoney")" method="post">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand" href="index.html">Digital Banking</a>
            <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
            <!-- Navbar-->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="@Url.Action( "Logout", "Dashboard")">Logout</a>
                    </div>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">Core</div>
                            <a class="nav-link" href="@Url.Action( "Index", "Dashboard")">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Home
                            </a>
                            <div class="sb-sidenav-menu-heading">TRANSACTIONS</div>
                            <a class="nav-link" href="#">
                                <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                                Transfer Money
                            </a>
                            <a class="nav-link" href="@Url.Action( "Index", "PayBill")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money-check"></i></div>
                                Bill Payment
                            </a>
                            <div class="sb-sidenav-menu-heading">HISTORY</div>
                            <a class="nav-link" href="@Url.Action( "Index", "Transactions")">
                                <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
                                Statement
                            </a>
                            <a class="nav-link" href="@Url.Action( "Balance", "TransferMoney")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money-bill-wave"></i></div>
                                Account Balance
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Logged in as: @Session["FirstName"]</div>
                        Digital Banking
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h2 class="mt-4">Transfer Money</h2>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">"Where Your Money Travels Safely."</li>
                        </ol>
                        
                        
                        <ol class="breadcrumb mb-4"
                            style="@(!string.IsNullOrEmpty(Session["SearchBeneficiary"] as string)
            ? "background-color: rgba(255, 0, 0, 0.1); color: darkred;"
            : "display: none;")">
                            <li class="breadcrumb-item active">
                                @Session["SearchBeneficiary"]
                            </li>
                        </ol>


                        
                        
                        @*@if (TempData["SearchBeneficiary"] != null)
                        {
                            <div class="alert alert-warning">
                                @TempData["SearchBeneficiary"]
                            </div>
                        }*@
                         
                                                                
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()                                                                           
                            <div class="container">
                                <div class="row">
                                    <!-- Source Account Section -->
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading" style="background-color: #87CEFA; text-align: center; border-radius: 5px;">
                                                <!-- Light blue background -->
                                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Sourced Account
                                            </div>
                                            <div class="panel-body">
                                                <div class="form-group row">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(model => model.ThisAccount, htmlAttributes: new { @class = "control-label" })
                                                        <div>
                                                            @Html.TextBoxFor(model => model.ThisAccount, new { @class = "form-control", @readonly = "readonly", placeholder = Session["AccountNo"] })

                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(model => model.TDate, "Account Name", htmlAttributes: new { @class = "control-label" })
                                                        <div>
                                                            @Html.TextBoxFor(model => model.TDate, new { @class = "form-control", @readonly = "readonly", placeholder = Session["FirstName"] })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(model => model.Amount, "Amount to Transfer", htmlAttributes: new { @class = "control-label" })
                                                        <div>
                                                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Enter Amount", size = "30" } })
                                                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>                                         
                                            </div>
                                        </div>
                                    </div>                                   
                                    <!-- Beneficiary Account Section -->
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading" style="background-color: #87CEFA; text-align: center; border-radius: 5px;">
                                                <!-- Light blue background -->
                                                <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Beneficiary Account
                                            </div>
                                            <div class="panel-body">
                                                <div class="form-group row">
                                                    <div class="col-md-12">
                                                        @Html.LabelFor(model => model.ToAccount, htmlAttributes: new { @class = "control-label" })
                                                        <div class="d-flex align-items-center">
                                                            @Html.EditorFor(model => model.ToAccount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter beneficiary account" } })
                                                            <button type="submit" value="search" @*name="sub"*@ formaction="/TransferMoney/Search" class="btn btn-primary ml-2">
                                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                                                            </button>
                                                        </div>
                                                        @Html.ValidationMessageFor(model => model.ToAccount, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(model => model.OldBalance, "Account Name", htmlAttributes: new { @class = "control-label" })
                                                        <div>
                                                            @Html.EditorFor(model => model.OldBalance, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" ,placeholder = Session["BeneficiaryName"] } })                                                           
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(model => model.Type, "Description", htmlAttributes: new { @class = "control-label" })
                                                        <div>
                                                            @Html.DropDownListFor(model => model.Type, new SelectList(new[] { "Transfer Money" }), new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Transfer Button -->
                                <div class="row">
                                    <div class="col-md-12 text-left">
                                        <button type="submit" value="tranfer" @*name="sub"*@ formaction="/TransferMoney/Index" class="btn btn-primary"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> Transfer</button>
                                        <span style="margin: 0 10px;"></span> <!-- Adding space between buttons -->
                                        <button type="reset" class="btn btn-danger"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset</button>
                                    </div>
                                </div>
                            </div>
                        }                      
                    </div>
                </main>

                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Digital Banking 2024</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/admin/admin_dashboard/dist/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
</body>
</html>
