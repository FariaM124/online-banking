@model IEnumerable<OnlineBanking.Models.StatementTable>

@{
    ViewBag.Title = "Detailed";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin/admin_dashboard/dist/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .dataTables_wrapper .dataTables_filter input {
            margin-left: 0.5em;
        }

        .dataTables_wrapper .dataTables_length select {
            margin-right: 0.5em;
        }

        .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_paginate {
            margin-top: 0.5em;
        }

        .table-responsive {
            padding: 1em;
        }

        table.dataTable td, table.dataTable th {
            font-size: 0.9em;
        }
    </style>
</head>

    <form id="form1" runat="server">
        <div id="layoutSidenav">
            <div id="layoutSidenav_content">
                <h2>Detailed Statement</h2>
                <hr style="border: 1px solid lightgray; margin-top: 0;">
                <div class="container">
                    <form method="get" action="@Url.Action("Index", "Transactions")">
                        <div class="row mb-3" style="padding-left: 20px;">
                            <div class="col-md-4">
                                <label for="dateFrom">Date From</label>
                                <input type="date" id="dateFrom" name="dateFrom" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label for="dateTo">Date To</label>
                                <input type="date" id="dateTo" name="dateTo" class="form-control" />
                            </div>
                            <div class="col-md-4 align-self-end">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary mr-2">Search</button>
                                    <button type="submit"  formaction="/Transactions/Index" class="btn btn-secondary">Back</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.FromAccount)</th>
                                    <th>@Html.DisplayNameFor(model => model.ToAccount)</th>
                                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                                    <th>@Html.DisplayNameFor(model => model.OldBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                    <th>@Html.DisplayNameFor(model => model.NewBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.AccountsTable.AccountNumber)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.FromAccount)</th>
                                    <th>@Html.DisplayNameFor(model => model.ToAccount)</th>
                                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                                    <th>@Html.DisplayNameFor(model => model.OldBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                    <th>@Html.DisplayNameFor(model => model.NewBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.AccountsTable.AccountNumber)</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FromAccount)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ToAccount)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OldBalance)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NewBalance)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AccountsTable.AccountNumber)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.SID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.SID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.SID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2020</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </form>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/admin/admin_dashboard/dist/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="assets/demo/chart-area-demo.js"></script>
        <script src="assets/demo/chart-bar-demo.js"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
        <script src="assets/demo/datatables-demo.js"></script>
        <script>
            $(document).ready(function () {
                $('#dataTable').DataTable();
            });
        </script>
    }

</html>
